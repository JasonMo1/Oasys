# Inicia o container do proot
#proot -l -r $UBUNTU_ROOTFS /bin/bash

# Prepara as variáveis de ambiente do Ubuntu
#export PATH=$UBUNTU_ROOTFS/usr/bin:$PATH

# Roda o neofetch
#neofetch